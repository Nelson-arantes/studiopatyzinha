<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_acompanhar_sub"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primaria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/agend_acompanhar_sub"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="58dp"
        android:textAllCaps="false"
        android:text="Agendamentos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/horario_acompanhar_sub"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="5dp"
        android:textAllCaps="false"
        android:text="Horários"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/servico_acompanhar_sub"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Serviços"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agend_acompanhar_sub" />

    <Button

        android:id="@+id/feedback_acompanhar_sub"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="Opniões"
        app:layout_constraintEnd_toEndOf="parent"
android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/horario_acompanhar_sub" />

</androidx.constraintlayout.widget.ConstraintLayout>