<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/linearLayout2_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Ir para o perfil do barbeiro"
        android:layout_marginStart="5dp"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo_user_post"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="@color/primaria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameUser_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buri"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 de maio"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/menu_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:contentDescription="Menu da publicação "
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="8sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/followbnt_post"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="corpo do texto"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2_post" />

    <ImageView
        android:id="@+id/photo_post"
        android:layout_width="0dp"
        android:layout_height="460dp"
        android:layout_marginTop="5dp"
        android:cropToPadding="true"
        android:src="@drawable/ic_arrow_send"
        app:layout_constraintDimensionRatio="h1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_post" />


    <ImageView

        android:id="@+id/likebnt_post"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_favorite"
        android:contentDescription="Deixar um coração para essa publicação"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_post" />

    <ImageView
        android:id="@+id/comentarbnt_post"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_comentario"
        android:contentDescription="Comentar"
        app:layout_constraintStart_toEndOf="@+id/likebnt_post"
        app:layout_constraintTop_toBottomOf="@id/photo_post" />

    <TextView
        android:id="@+id/quantlikes_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="0 Likes"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likebnt_post" />

    <TextView
        android:id="@+id/quantscomments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="0 Comentários"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/quantlikes_post" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#636363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantscomments" />
</androidx.constraintlayout.widget.ConstraintLayout>
