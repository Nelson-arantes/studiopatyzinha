<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gerenciar.Rotina">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_rotina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaria"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_close_30"
        app:title="Rotina"
        app:titleTextColor="@color/white" />

    <ImageView
        android:id="@+id/savealldays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_rotina"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rotina"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_rotina"
        tools:itemCount="2"
        tools:listitem="@layout/item_day_main" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Começa as:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_rotina" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Termina as:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/horafim"
        app:layout_constraintTop_toBottomOf="@+id/rv_rotina" />

    <ImageView
        android:id="@+id/horacomecopi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        app:tint="@color/primaria" />

    <Spinner
        android:id="@+id/horacomecospinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/horacomecopi"
        app:layout_constraintStart_toEndOf="@+id/horacomecopi"
        app:layout_constraintTop_toTopOf="@+id/horacomecopi" />

    <View
        android:id="@+id/view6"
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/primaria"
        app:layout_constraintEnd_toEndOf="@+id/horacomecospinner"
        app:layout_constraintTop_toBottomOf="@+id/horacomecopi" />

    <ImageView
        android:id="@+id/horafim"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_time"
        app:layout_constraintEnd_toStartOf="@+id/horafimspinner"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:tint="@color/primaria" />

    <Spinner
        android:id="@+id/horafimspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/horafim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horafim" />

    <View
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/primaria"
        app:layout_constraintStart_toStartOf="@+id/horafim"
        app:layout_constraintTop_toBottomOf="@+id/horafim" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horário de almoço"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Começa as:"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <ImageView
                android:id="@+id/horacomecoalmocopi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:tint="@color/primaria" />

            <Spinner
                android:id="@+id/horacomecoalmoco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/horacomecoalmocopi"
                app:layout_constraintStart_toEndOf="@+id/horacomecoalmocopi"
                app:layout_constraintTop_toTopOf="@+id/horacomecoalmocopi" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termina as:"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/horafimalmocopi"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />


            <ImageView
                android:id="@+id/horafimalmocopi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_time"
                app:layout_constraintBottom_toBottomOf="@+id/horafimalmoco"
                app:layout_constraintEnd_toStartOf="@+id/horafimalmoco"
                app:layout_constraintTop_toTopOf="@+id/horafimalmoco"
                app:tint="@color/primaria" />

            <Spinner
                android:id="@+id/horafimalmoco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/horacomecoalmocopi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/horacomecoalmocopi" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.project.studiopatyzinha.pattern.SwitchPlus
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Será folga"
        android:id="@+id/iffolga"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

    <Button
        android:id="@+id/salvar_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iffolga" />
</androidx.constraintlayout.widget.ConstraintLayout>