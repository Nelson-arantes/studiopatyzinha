<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaria"
                android:elevation="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:contentDescription="Dethalhes"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Detalhes"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/detalhes_main"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    app:endIconContentDescription="Voltar para produtos"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_back" />

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_medicine_details"
                    android:layout_width="300dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="Imagem do produto"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nome_remedio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="nome remedio"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_medicine_details" />

                <TextView
                    android:id="@+id/descricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:layout_marginTop="5dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:contentDescription=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nome_remedio" />

                <TextView
                    android:id="@+id/usosindicados_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Usos indicados"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descricao" />


                <TextView
                    android:id="@+id/usosIndicados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/usosindicados_txt" />

                <TextView
                    android:id="@+id/usosNindicados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"

                    android:textColor="@color/black"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/usosNindicados_txt" />

                <TextView
                    android:id="@+id/usosNindicados_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="24dp"
                    android:text="Usos nÃ£o indicados"
                    android:textColor="@color/black"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/usosIndicados" />


                <ImageButton
                    android:id="@+id/morebutton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Adicionar mais um produto"
                    android:background="@drawable/ic_add"
                    app:layout_constraintStart_toStartOf="@+id/addtocart"
                    app:layout_constraintTop_toBottomOf="@+id/usosNindicados" />

                <TextView
                    android:id="@+id/nome_quant_item"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:text="0"
android:contentDescription="quantidade de produto"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/morebutton"
                    app:layout_constraintEnd_toEndOf="@+id/addtocart"
                    app:layout_constraintStart_toStartOf="@+id/addtocart"
                    app:layout_constraintTop_toTopOf="@+id/morebutton" />

                <ImageView
                    android:id="@+id/lessbutton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_close_30_red"
                    android:visibility="gone"
android:contentDescription="remover um produto"

                    app:layout_constraintBottom_toBottomOf="@+id/morebutton"
                    app:layout_constraintEnd_toEndOf="@+id/addtocart"
                    app:layout_constraintTop_toTopOf="@id/morebutton"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/addtocart"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="Colocar os produtos no carrinho"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/primaria"
                    android:text="Voltar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/morebutton" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/img_medicine_details_fully"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:cropToPadding="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgcls_img_details_fully"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_30"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/img_medicine_details_fully"
        app:layout_constraintTop_toTopOf="@+id/img_medicine_details_fully" />
</androidx.constraintlayout.widget.ConstraintLayout>