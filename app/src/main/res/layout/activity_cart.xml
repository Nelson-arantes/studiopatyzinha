<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaria"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/top_back_carrinho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cart_name_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:text="Carrinho"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@id/top_back_carrinho"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/quant_medicine_cart"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="seu carrinho esta vazio"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@id/cart_name_top"
                app:layout_constraintTop_toBottomOf="@+id/cart_name_top" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_medicine_cart"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:layout_marginTop="5dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/img_empty_rv_medicine_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicione um produto"

                app:layout_constraintBottom_toBottomOf="@+id/rv_medicine_cart"
                app:layout_constraintEnd_toEndOf="@+id/rv_medicine_cart"
                app:layout_constraintStart_toStartOf="@+id/rv_medicine_cart"
                app:layout_constraintTop_toTopOf="@+id/rv_medicine_cart" />


            <TextView
                android:id="@+id/total_priceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/comprarProdutos_cartActivity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGrup_waypayment_cart" />

            <TextView
                android:id="@+id/total_price_number_cartActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 0,00"
                android:textColor="@color/black"
                android:textSize="18dp"

                app:layout_constraintBottom_toBottomOf="@+id/total_priceTV"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/waypaymenttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:text="Forma de pagamento"
                android:textColor="@color/secundariaB"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_medicine_cart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="(Pagar na retirada)"
                android:textColor="@color/secundariaB"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@+id/waypaymenttv"
                app:layout_constraintTop_toBottomOf="@+id/rv_medicine_cart" />
            <RadioGroup
                android:id="@+id/radioGrup_waypayment_cart"
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_marginTop="5dp"
                android:checkedButton="@id/checkbox_dinheiro_cart"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/waypaymenttv">

                <RadioButton
                    android:id="@+id/checkbox_dinheiro_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/secundariaB"
                    android:text="Dinheiro" />

                <RadioButton
                    android:id="@+id/checkbox_pix_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/secundariaB"
                    android:text="Pix" />

                <RadioButton
                    android:id="@+id/checkbox_cartao_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/secundariaB"
                    android:text="CartÃ£o debito/credito" />

            </RadioGroup>

            <Button
                android:id="@+id/comprarProdutos_cartActivity"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/secundariaB"
                android:text="Agendar retirada"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGrup_waypayment_cart" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>