<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comentar">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:id="@+id/title_coment"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@color/primaria"
        android:text="Comentários"
        android:padding="5dp"
        android:contentDescription="Voltar para as Tendências"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
    <ImageView
        android:id="@+id/closedialog_comentar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_coment"
        android:src="@drawable/ic_close_30"
        android:layout_width="48dp"
        android:layout_height="48dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:contentDescription="Comnetários"
        android:id="@+id/rv_comentarios"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="59dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/comet_comentario"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Comente algo"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:gravity="center"

            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/secundariaB"
            app:endIconTint="@color/secundariaB"
            app:hintTextColor="@color/secundariaB">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:inputType="textCapSentences"
                android:singleLine="true"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/send_comment"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Enviar comentário"
            android:src="@drawable/ic_arrow_send" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>