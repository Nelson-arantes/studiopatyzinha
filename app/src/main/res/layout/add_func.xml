<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_add_func"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/primaria"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Registro de funcionário(a)"
            app:titleTextColor="@color/white" />

        <ImageView
            android:id="@+id/ftUser"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_camera"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_add_func" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idfuncETL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:hint="Código do funcionario(a)"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/secundariaB"
            app:endIconContentDescription="Apagar texto"
            app:endIconMode="clear_text"
            app:endIconTint="@color/secundariaB"
            app:hintTextColor="@color/secundariaB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ftUser">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:inputType="text"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nomeETL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:hint="Nome do funcionario(a)"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/secundariaB"
            app:endIconContentDescription="Apagar texto"
            app:endIconMode="clear_text"
            app:endIconTint="@color/secundariaB"
            app:hintTextColor="@color/secundariaB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idfuncETL">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:inputType="textCapWords"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/percentETL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:hint="percentual da empresa (%)"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/secundariaB"
            app:counterMaxLength="5"
            app:endIconContentDescription="Apagar texto"
            app:endIconMode="clear_text"
            app:endIconTint="@color/secundariaB"
            app:hintTextColor="@color/secundariaB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomeETL">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:inputType="number"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cargoETL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:hint="Cargo"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/secundariaB"
            app:endIconContentDescription="Apagar texto"
            app:endIconMode="clear_text"
            app:endIconTint="@color/secundariaB"
            app:hintTextColor="@color/secundariaB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/percentETL">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:inputType="textCapSentences"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Escolha a forma de pagamento desse funcionário"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cargoETL" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/switcoftenpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:theme="@style/Theme.studiopatyzinha"
            app:checkedButton="@+id/semanalbnt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cargoETL"
            app:selectionRequired="true"
            app:singleSelection="true">

            <Button
                android:id="@+id/diariobnt"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diario"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/semanalbnt"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semanal"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/mensalbnt"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensal"
                android:textAllCaps="false"
                android:theme="@style/Theme.studiopatyzinha" />

            <Button
                android:id="@+id/editadobnt"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textAllCaps="false"
                android:theme="@style/Theme.studiopatyzinha" />


        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!--semanal-->
        <LinearLayout
            android:id="@+id/parentlayoutpagamentosemanal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/switcoftenpayment">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/choose_dayPayement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--mensal-->
        <LinearLayout
            android:id="@+id/parentlayoutpagamentomensal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/parentlayoutpagamentosemanal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/daypaymentETL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:hint="Dia de pagamento"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/secundariaB"
                app:endIconMode="clear_text"
                app:endIconTint="@color/secundariaB"
                app:hintTextColor="@color/secundariaB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/percentETL">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:text="0" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <!--edit-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent_often"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/parentlayoutpagamentomensal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/oftenPayementETL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:hint="Frequência de pagamento (dias)"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/secundariaB"
                app:endIconContentDescription="Apagar texto"
                app:endIconMode="clear_text"
                app:endIconTint="@color/secundariaB"
                app:hintTextColor="@color/secundariaB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:inputType="number"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/chamarDatePicker"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_calendar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oftenPayementETL" />

            <TextView
                android:id="@+id/datashow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/chamarDatePicker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chamarDatePicker" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Escolha o melhor horário para receber a notificação"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parent_often" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"

            android:text="Ex: Nas quartas o melhor horário é as 15:00"
            android:textColor="@color/cinza"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />


        <!--diario-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentlayoutpagamentodiario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView21">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_days_UI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/rv_days_UI">

                <TextView
                    android:id="@+id/notificaras_addfunc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Notificar as: "
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/chamartimerpickerdialgo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_time"
                    app:layout_constraintStart_toEndOf="@+id/notificaras_addfunc"
                    app:layout_constraintTop_toBottomOf="@id/rv_days_UI" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <CheckBox
            android:id="@+id/if_gerente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:buttonTint="@color/primaria"
            android:text="É gerente"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parentlayoutpagamentodiario" />
        <!--gerente layout-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/p_sub_addfunc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/if_gerente">

            <Spinner
                android:id="@+id/spinner_func_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/add_func_spinner_addservico"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/add_func_spinner_addservico"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_funcs_abaixo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/add_func_spinner_addservico" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/savarfunc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="@color/primaria"
            android:text="Salvar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p_sub_addfunc" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
